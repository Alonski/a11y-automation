<table class="sortable-table min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th
        scope="col"
        class="sortable text-left"
      >
        <button class="sort-toggle w-full text-left px-6 py-3 text-xs tracking-wider font-medium text-gray-800 uppercase" type="button" {{on "click" (fn this.sortBy "title")}}>
          <span class="col-heading">Failure</span>
          <span class="sort-arrow inline-block w-4" aria-hidden="true"></span>
        </button>
      </th>
      <th
        scope="col"
        class="sortable text-left"
      >
        <button class="sort-toggle w-full text-left px-6 py-3 text-xs tracking-wider font-medium text-gray-800 uppercase" type="button" {{on "click" (fn this.sortBy "linting")}}>
          <span class="col-heading">Linting Status</span>
          <span class="sort-arrow inline-block w-4" aria-hidden="true"></span>
        </button>
      </th>
      <th
        scope="col"
        class="sortable text-left"
      >
        <button class="sort-toggle w-full text-left px-6 py-3 text-xs tracking-wider font-medium text-gray-800 uppercase" type="button" {{on "click" (fn this.sortBy "testing")}}>
          <span class="col-heading">Testing Status</span>
          <span class="sort-arrow inline-block w-4" aria-hidden="true"></span>
        </button>
      </th>
      <th
        scope="col"
        class="sortable text-left"
      >
        <button class="sort-toggle w-full text-left px-6 py-3 text-xs tracking-wider font-medium text-gray-800 uppercase" type="button" {{on "click" (fn this.sortBy "manual")}}>
          <span class="col-heading">Manual Testing Status</span>
          <span class="sort-arrow inline-block w-4" aria-hidden="true"></span>
        </button>
      </th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    {{#each (sort-by this.sort @model) as |cellitem|}}
      <tr>
        <td
          class="px-6 py-4 whitespace-nowrap text-base font-medium text-gray-900"
        >
          <LinkTo
            @route="violations.violation"
            @model={{cellitem.id}}
            class="underline"
          >
            {{cellitem.title}}
          </LinkTo>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-base text-gray-500">
          <span class="status status-{{cellitem.linting}}">
            {{cellitem.lintingText}}
          </span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-base text-gray-500">
          <span class="status status-{{cellitem.testing}}">
            {{cellitem.testingText}}
          </span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-base text-gray-500">
          <span class="status status-{{cellitem.manual}}">
            {{cellitem.manualText}}
          </span>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<div id="a11y-notification" class="sr-only" role="region" aria-live="polite"></div>
