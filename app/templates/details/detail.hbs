<h2 id="detail-title">{{@model.title}}</h2>
<p id="automation-status-title">Automation Status:</p>
<ul class="status-list" aria-labelledby="automation-status-title">
  {{!-- TODO this is messy, I bet you can do better --}}
  <li class="status-listitem">Linting:
    {{#if (eq @model.linting "exists")}}
      <span class="status-exists">Exists</span>
    {{else if (eq @model.linting "couldexist")}}
      <span class="status-couldexist">Could Exist</span>
    {{else}}
      <span class="status-cannotexist">Cannot Exist</span>
    {{/if}}
  </li>
  <li class="status-listitem">Testing:
    {{#if (eq @model.testing "exists")}}
      <span class="status-exists">Exists</span>
    {{else if (eq @model.testing "couldexist")}}
      <span class="status-couldexist">Could Exist</span>
    {{else}}
      <span class="status-cannotexist">Cannot Exist</span>
    {{/if}}
  </li>
  <li class="status-listitem">Author: 
    {{#if (eq @model.author "exists")}}
      <span class="status-exists">Exists</span>
    {{else if (eq @model.author "couldexist")}}
      <span class="status-couldexist">Could Exist</span>
    {{else}}
      <span class="status-cannotexist">Cannot Exist</span>
    {{/if}}
  </li>
  <li class="status-listitem">Manual:
    {{#if (eq @model.manual "exists")}}
      <span class="status-exists">Exists</span>
    {{else if (eq @model.manual "couldexist")}}
      <span class="status-couldexist">Could Exist</span>
    {{else if (eq @model.manual "cannotexist")}}
      <span class="status-cannotexist">Cannot Exist</span>
    {{else}}
      <span class="status-mustexist">Must Exist</span>
    {{/if}}
  </li>
</ul>
<hr>
<article aria-labelledby="detail-title">
  {{{@model.html}}}

  <footer>
    <p id="list-criteria-title">Relevant Criteria:</p>
    <ul class="list-tags" aria-labelledby="list-criteria-title">
      {{#each @model.tags as |tagitem| }}
        <li><a href={{tagitem.url}}>{{tagitem.title}}</a></li>
      {{else}}
        <li>Sorry, something went wrong.</li>
      {{/each}}
  </ul>
  </footer>
</article>
{{outlet}}
